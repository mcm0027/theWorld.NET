
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/styles/app.css" />
</head>
<body>

    <div id="sidebar">
        <img src="~/img/aboutMe.jpg" alt="A picture of Sam" class="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <section id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <div>
                @RenderBody()
            </div>
        </section>
        <footer>
            &copy; 2016 The World
        </footer>
    </div>
    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/scripts/index.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>